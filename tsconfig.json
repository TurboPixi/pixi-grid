{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./lib/",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "es6",
    "target": "es5",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "**/__tests__/*", "**/lib/*", "**/dist/*"]
}
